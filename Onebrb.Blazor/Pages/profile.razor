@page "/profile"
@page "/profile/{profileId:int}"

@using Onebrb.Blazor.Models

<EditForm Model="@profileModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">
        <div class="row">
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Create Onebrb profile</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="txtFirstName" @bind="profileModel.FirstName" placeholder="" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="txtLastName" placeholder="" value="" >
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="txtEmail" placeholder="you@example.com">
                    <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-6">
                        <label for="country">Country</label>
                        <select class="custom-select d-block w-100" id="slCountry" >
                            <option value="">Choose...</option>
                            <option>United States</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid country.
                        </div>
                    </div>
                    <div class="col-md-6 mb-6">
                        <label for="state">City</label>
                        <input type="text" class="form-control" id="txtCity" placeholder="City">
                        <div class="invalid-feedback">
                            Please provide a valid city.
                        </div>
                    </div>
                </div>
                <hr class="mb-4">

                <div class="form-group">
                    <label for="exampleFormControlTextarea1">About you</label>
                    <textarea class="form-control" id="txtAboutYou" rows="3"></textarea>
                </div>
                <hr class="mb-4">

                <h4 class="mb-3">Photo</h4>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Choose photo (.JPG/.JPEG/.PNG)</label>
                    <input type="file" class="form-control-file" id="inputPhoto">
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
            </div>
        </div>
    </div>

</EditForm>


@code {
    [Parameter]
    public int profileId { get; set; }

    OnebrbProfile profileModel = new OnebrbProfile();
    string txtFirstname = string.Empty;

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
